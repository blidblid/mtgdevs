{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@mtg-devs/core": [
        "lib/core"
      ],
      "@mtg-devs/components": [
        "lib/components"
      ],
      "@mtg-devs/api": [
        "lib/api"
      ],
      "core-js/es7/reflect": [
        "../node_modules/core-js/proposals/reflect-metadata"
      ],
      "core-js/es6/*": [
        "../node_modules/core-js/es"
      ],
      "core-js/es7/*": [
        "../node_modules/core-js/es"
      ]
    },
    "skipLibCheck": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
}
